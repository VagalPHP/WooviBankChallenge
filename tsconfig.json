{
  "compilerOptions": {
    "target": "ES2020",                          // Define a versão do JavaScript de saída
    "module": "commonjs",                        // Usa o sistema de módulos do Node.js
    "strict": true,                              // Ativa a verificação estrita de tipos
    "esModuleInterop": true,                     // Suporte para importações ES6
    "skipLibCheck": true,                        // Evita a verificação de tipos em bibliotecas de terceiros
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,    // Força consistência nos nomes dos arquivos
    "outDir": "./dist",                          // Diretório de saída dos arquivos compilados
    "rootDir": "./src"                           // Diretório de origem dos arquivos TypeScript
  },
  "include": ["src"],                            // Inclui arquivos da pasta src na compilação
  "exclude": ["node_modules"]                    // Exclui node_modules da compilação
}
